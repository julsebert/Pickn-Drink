<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="680.0" prefWidth="400.0" spacing="5" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainpackage.ControllerPayment">

    <HBox alignment="CENTER" minHeight="120.0" prefHeight="120.0" prefWidth="200.0">
        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Logo.png" />
            </image>
        </ImageView>

    </HBox>
   <HBox alignment="TOP_CENTER" minHeight="500.0" prefHeight="100.0" prefWidth="200.0">
      <children>
         <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label text="#12650">
                  <font>
                     <Font size="30.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="150.0" />
                  </VBox.margin>
               </Label>
               <Label text="Your order will be ready for pickup soon.">
                  <VBox.margin>
                     <Insets bottom="50.0" />
                  </VBox.margin>
               </Label>
               <ProgressBar minWidth="250.0" prefWidth="200.0" progress="0.0" />
            </children>
         </VBox>
      </children>
   </HBox>

    <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0">
        <children>
            <Button fx:id="menuButton1" mnemonicParsing="false" onAction="#logout" prefHeight="50.0" prefWidth="133.0" text="Logout" />
            <Button fx:id="menuButton2" mnemonicParsing="false" onAction="#changeToDrinks" prefHeight="50.0" prefWidth="133.0" text="Drinks" />
            <Button fx:id="menuButton3" mnemonicParsing="false" onAction="#changeToBasket" prefHeight="50.0" prefWidth="133.0" text="Basket" />
        </children></HBox>
</VBox>
